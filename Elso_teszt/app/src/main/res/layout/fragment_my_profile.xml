<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.MyProfileFragment"
    android:background="@drawable/gradient">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:layout_marginTop="80dp"
        android:textSize="30dp"
        android:text="Személyes információk"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/beallitasok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beállítások"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_button"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:drawableLeft="@drawable/baseline_settings_24"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        />

    <Button
        android:id="@+id/testreszabas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testreszabás"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/beallitasok"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_button"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:drawableLeft="@drawable/baseline_tune_24"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/keszenlet"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testreszabas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Készenlétben"
        android:textSize="25dp"
        app:thumbTint="@color/white"
        app:trackTint="@color/gray"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/kijelentkezes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kijelentkezés"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/keszenlet"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_corner_button"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:drawableLeft="@drawable/exit_to_app_black_24dp"
        android:drawableRight="@drawable/baseline_chevron_right_24"
        />

</RelativeLayout>