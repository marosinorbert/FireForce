<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.StartFragment"
    android:background="@drawable/gradient"
    >

    <Button
        android:id="@+id/btn_join_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Csatlakozás egyesülethez"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/baseline_people_alt_24"
        />

    <Button
        android:id="@+id/btn_create_club"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Egyesület létrehozása"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:drawableLeft="@drawable/baseline_add_24"
        />

</RelativeLayout>